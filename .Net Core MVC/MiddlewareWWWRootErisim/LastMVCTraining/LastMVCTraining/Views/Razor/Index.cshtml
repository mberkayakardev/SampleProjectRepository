<h1 class= "text-center text-danger "> Razor denemeleri </h1>

@{
    string degisken1 = "Merhaba dünya";
    degisken1 = degisken1 + " - ";
    <h1> Görüleceğü üzere @@ kullanırsak iç iç iki @@ o zaman çıktı veriyor </h1>
    @degisken1
}

@{
    List<string> DenemeListesi = new() { "Ahmet", "Mehmet,", degisken1 };
    foreach (var item in DenemeListesi)
    {
        @item;
    }
}
    