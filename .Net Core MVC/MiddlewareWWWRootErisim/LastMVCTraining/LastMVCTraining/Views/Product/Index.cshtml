@model List<Product>
<h1 class="text-danger text-center"> Ürünler Sınıfı </h1>
<hr />
<a class="btn btn-lg btn-success" asp-action="Create" asp-controller="Product"> Yeni ürün kaydı</a> 
<hr />




<table>
    <thead>
        <tr>
            <td>#  Id </td>
            <td>Ürün Adı </td>
            <td>Fiyatı </td>
            <td> </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
            </tr>
        
        }
    </tbody>
</table>